import java.util.*;

class Main {
    public static void main(String[] args) {
        System.out.println("Enter Number of digits  :");
        int number,sum=0;
        Scanner sc = new Scanner(System.in);
        number = sc.nextInt();
        while(number >0){
            int lastDigit = number%10;
            number = number/10;
            sum = sum+lastDigit;
        }
        System.out.println("Sum of all digits :"+sum);
    }
}
